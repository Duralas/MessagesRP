{% extends 'base.html.twig' %}

{% block title %}Periode index{% endblock %}

{% block body %}
    <h1>Periode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Nom</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for periode in periodes %}
            <tr>
                <td>{{ periode.code }}</td>
                <td>{{ periode.nom }}</td>
                <td>{{ periode.startDate ? periode.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ periode.endDate ? periode.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('periode_show', {'code': periode.code}) }}">show</a>
                    <a href="{{ path('periode_edit', {'code': periode.code}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('periode_new') }}">Create new</a>
{% endblock %}
